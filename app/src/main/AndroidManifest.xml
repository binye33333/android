<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teach.yo.codeshop">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ActivityMain"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ClearEditTextTest"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PullToRefreshListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".DrawerLayoutTest"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

        <activity
            android:name=".MaterialDesignTest"
            android:screenOrientation="portrait" />

        <activity
            android:name=".SwapRefreshTest"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.teach.yo.toollibrary.view.crop.CropImageActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".CropActivityTest"
            android:screenOrientation="portrait" />

        <activity
            android:name=".CustomerProgressTest"
            android:screenOrientation="portrait" />
    </application>

</manifest>
